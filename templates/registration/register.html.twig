{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}

{% block main %}
    <div class="container col-xl-10 col-xxl-8 px-4">
		<div class="row align-items-center g-lg-5 ">
            {{ form_errors(registrationForm) }}
            {# Title #}
			<section class="col-lg-5 text-center text-lg-start">
				<h1 class="display-4 fw-bold lh-1 text-body-emphasis "> Inscription </h1>
			</section>

            {# Form #}
			<section class="col-md-10 mx-auto col-lg-7">
				<div class="p-4 p-md-5 border rounded-3 bg-body-tertiary" >
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.nom)}}
                        {{ form_row(registrationForm.prenom)}}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        {# Submit #}
                        <button class="w-100 btn btn-lg btn-dark" type="submit">Inscription</button>
                    {{ form_end(registrationForm) }}
				</div>
			</section>
		</div>
	</div>

{% endblock %}
