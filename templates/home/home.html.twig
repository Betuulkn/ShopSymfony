{% extends 'base.html.twig' %}

{% block title %} Nos vêtements {% endblock %}

{% block body %}
	{% if produits is not empty %}
	<!-- Title --> 
	<section class="title">
		<h1 class="text-center mb-4">Nos vêtements</h1>
	</section>

	<!-- Products/cloths list  --> 
	<section class="products my-5">
		<div class="row">
			<div class="col-12 d-flex flex wrap justify-content-center">
				{% for produit in produits %}
					<!-- Card of a product --> 
					{% include 'partials/_cardProduct.html.twig' %}
				{% endfor %}
			</div>
		</div>
	{% else %}
		<p>Il n'y a pas de produit.</p>
	{% endif %}
	</section>

	<!-- Check if the admin is logged-in to add a new product  --> 
	{% if app.user and is_granted('ROLE_ADMIN') %}
	<section class="add-form my-5">
		<div class="row d-flex justify-content-center">
            <div class="col-md-8 border p-3 rounded">
                <h2 class="text-center" style="font-size:24px;">Ajouter un nouveau vêtement</h2>
				{{ form(ajout) }}
			</div>
		</div>
	</section>
	{% endif %}
{% endblock %}
